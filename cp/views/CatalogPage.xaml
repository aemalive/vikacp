<Page x:Class="cp.views.CatalogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:vms="clr-namespace:cp.viewModels"
      mc:Ignorable="d"
      Title="{DynamicResource CatalogPage_Title}"
      d:DesignHeight="450" d:DesignWidth="800">

    <Page.DataContext>
        <vms:CatalogViewModel />
    </Page.DataContext>

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" Grid.Row="0">

            <TextBox Width="200"
                     Margin="0,0,10,0"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
            <ComboBox Width="150"
                      Margin="0,0,10,0"
                      SelectedItem="{Binding SelectedSortOption}"
                      ItemsSource="{Binding SortOptions}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <Button Content="{DynamicResource Btn_Reset}"
                    Command="{Binding ResetFiltersCommand}"
                    Margin="0,0,10,0" />

            <Button Content="{DynamicResource Btn_AddProduct}"
                    Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVis}}"
                    Command="{Binding AddProductCommand}" />
        </StackPanel>

        <ListBox Grid.Row="1"
                 ItemsSource="{Binding FilteredFlowers}"
                 SelectedItem="{Binding SelectedFlower}" 
                 Margin="10">
            <ListBox.ItemTemplate>

                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <Image Source="{Binding ImageURL}" Width="100" Height="100" Margin="10"/>

                        <StackPanel Orientation="Vertical" Margin="10,0,0,0">
                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16"/>

                            <TextBlock Margin="0,5,0,0">
                                    <Run Text="{DynamicResource PriceLabel}"/>
                                    <Run Text="{Binding Price, StringFormat=' {0:C}'}"/>
                            </TextBlock>


                            <Button Content="{DynamicResource Btn_EditProduct}"
                                        Command="{Binding DataContext.EditProductCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                        CommandParameter="{Binding}"
                                        Visibility="{Binding DataContext.IsAdmin, 
                                                            RelativeSource={RelativeSource AncestorType=ListBox}, 
                                                            Converter={StaticResource BoolToVis}}"/>
                            <Button Content="{DynamicResource Btn_DeleteProduct}"
                                        Command="{Binding DataContext.DeleteProductCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                        CommandParameter="{Binding}"
                                        Visibility="{Binding DataContext.IsAdmin, RelativeSource={RelativeSource AncestorType=ListBox}, Converter={StaticResource BoolToVis}}"
                                        Margin="0,5,0,0"/>

                            <Button Content="{DynamicResource Btn_AddToCart}"
                                        Command="{Binding DataContext.AddToCartCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                        CommandParameter="{Binding}"
                                        Visibility="{Binding DataContext.IsUser, RelativeSource={RelativeSource AncestorType=ListBox}, Converter={StaticResource BoolToVis}}"
                                        Margin="0,5,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Page>
