                </Rectangle>
            </Button>

            <Button Grid.Column="3"
                    Command="{Binding NavigateCommand}"
                    CommandParameter="ProfilePage"
                    Margin="10,0,20,0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Background="Transparent"
                    BorderThickness="0">
                <Rectangle Width="40" Height="40">
                    <Rectangle.Fill>
