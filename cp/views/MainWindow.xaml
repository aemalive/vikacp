                        </DrawingBrush>
                    </Rectangle.Fill>
                </Rectangle>
            </Button>

        </Grid>

        <Frame x:Name="MainFrame"
               Grid.Row="1"
               Content="{Binding CurrentPage}"
               NavigationUIVisibility="Hidden"
               Margin="10"/>
    </Grid>
</Window>
