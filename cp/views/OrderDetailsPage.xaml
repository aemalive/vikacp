<Page x:Class="cp.views.OrderDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OrderDetailsPage">


    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="0 0 0 20">
            <TextBlock FontSize="24" FontWeight="Bold" Margin="0 0 0 10">
                <Run Text="{DynamicResource OrderDetailsTitle}"/>
            </TextBlock>

            <TextBlock FontSize="16">
                <Run Text="{DynamicResource OrderAddressLabel}"/> 
                <Run Text=" "/>
                <Run Text="{Binding Order.Address}"/>
            </TextBlock>

            <TextBlock FontSize="16">
                <Run Text="{DynamicResource OrderDeliveryTimeLabel}"/>
                <Run Text=" "/>
                <Run Text="{Binding Order.DeliveryTime}"/>
            </TextBlock>

            <TextBlock FontSize="16">
                <Run Text="{DynamicResource OrderCommentLabel}"/> 
                <Run Text=" "/>
                <Run Text="{Binding Order.Comment}"/>
            </TextBlock>

            <TextBlock FontSize="16" FontWeight="Bold">
                <Run Text="{DynamicResource OrderTotalAmountLabel}"/> 
                <Run Text=" "/>
                <Run Text="{Binding Order.TotalAmount, StringFormat={}{0:C}}"/>
            </TextBlock>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Order.OrderItems}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="5">
                            <StackPanel Orientation="Horizontal">
                                <StackPanel Width="200">
                                    <TextBlock FontWeight="Bold" FontSize="16">
                                        <Run Text="{Binding Flower.Name}"/>
                                    </TextBlock>
                                    <TextBlock FontSize="14">
                                        <Run Text="{DynamicResource OrderItemPriceLabel}"/> 
                                        <Run Text=" "/>
                                        <Run Text="{Binding Price, StringFormat={}{0:C}}"/>
                                    </TextBlock>
                                </StackPanel>
                                <StackPanel Width="100" Margin="10,0,0,0">
                                    <TextBlock FontSize="14" Text="{DynamicResource OrderItemQuantity}"/>
                                    <TextBlock FontSize="14" Text="{Binding Quantity}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
