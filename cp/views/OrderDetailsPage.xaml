<Page x:Class="cp.views.OrderDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OrderDetailsPage">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="0 0 0 20">
            <TextBlock Text="Подробности заказа" FontSize="24" FontWeight="Bold" Margin="0 0 0 10"/>
            <TextBlock Text="{Binding Order.Address, StringFormat='Адрес: {0}'}" FontSize="16"/>
            <TextBlock Text="{Binding Order.DeliveryTime, StringFormat='Время доставки: {0}'}" FontSize="16"/>
            <TextBlock Text="{Binding Order.Comment, StringFormat='Комментарий: {0}'}" FontSize="16"/>
            <TextBlock Text="{Binding Order.TotalAmount, StringFormat='Общая сумма: {0:C}'}" FontSize="16" FontWeight="Bold"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Order.OrderItems}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="5">
                            <StackPanel Orientation="Horizontal">
                                <StackPanel Width="200">
                                    <TextBlock Text="{Binding Flower.Name}" FontWeight="Bold" FontSize="16"/>
                                    <TextBlock Text="{Binding Price, StringFormat='Цена: {0:C}'}"/>
                                </StackPanel>
                                <StackPanel Width="100" Margin="10,0,0,0">
                                    <TextBlock Text="Количество"/>
                                    <TextBlock Text="{Binding Quantity}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
