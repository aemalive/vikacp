<Page x:Class="cp.views.OrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:cp.views"
      xmlns:vms="clr-namespace:cp.viewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OrderPage">
    <Page.DataContext>
        <vms:OrderViewModel />
    </Page.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock FontSize="24" FontWeight="Bold" Grid.Row="0" Margin="0 0 0 10">
            <Run Text="{DynamicResource OrderInfoTitle}"/>
        </TextBlock>

        <StackPanel Grid.Row="1" Margin="0 0 0 20">
            <StackPanel>
                <Label HorizontalAlignment="Center" Content="{DynamicResource OrderAddressLabel}" />
                <TextBox Text="{Binding Address}" Width="300" />
            </StackPanel>

            <StackPanel>
                <Label HorizontalAlignment="Center" Content="{DynamicResource OrderDeliveryTimeLabel}" />
                <TextBox Text="{Binding DeliveryTime}" Width="300"/>
            </StackPanel>

            <StackPanel>
                <Label HorizontalAlignment="Center" Content="{DynamicResource OrderCommentLabel}" />
                <TextBox Text="{Binding Comment}" Width="300"/>
            </StackPanel>
        </StackPanel>

        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <ItemsControl ItemsSource="{Binding Order.OrderItems}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="5">
                                <StackPanel Orientation="Horizontal">

                                    <StackPanel Orientation="Vertical" Width="200" HorizontalAlignment="Left">
                                        <TextBlock FontWeight="Bold" FontSize="16" Text="{Binding Flower.Name}" />
                                        <TextBlock FontSize="14">
                                            <Run Text="{DynamicResource OrderItemPriceLabel}"/>
                                            <Run Text=" "/>
                                            <Run Text="{Binding Price, StringFormat={}{0:C}}"/>
                                        </TextBlock>
                                    </StackPanel>

                                    <StackPanel Orientation="Vertical" Width="100" HorizontalAlignment="Center">
                                        <TextBlock FontSize="14" Text="{DynamicResource OrderItemQuantityLabel}"/>
                                        <TextBlock FontSize="14" Text="{Binding Quantity}"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Vertical" Width="100" HorizontalAlignment="Right">
                                        <TextBlock FontSize="14" Text="{DynamicResource OrderItemSumLabel}"/>
                                        <TextBlock FontSize="14" Text="{Binding Total, StringFormat={}{0:C}}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 20 0 0">
            <TextBlock FontSize="18" FontWeight="Bold" VerticalAlignment="Center" Margin="20">
    <Run Text="{DynamicResource OrderTotalAmountLabel}" />
    <Run Text=" " />
    <Run Text="{Binding TotalAmount, Mode=OneWay, StringFormat={}{0:C}}" />
            </TextBlock>

            <Button Content="{DynamicResource ConfirmOrderButton}" Width="150" Height="30" Command="{Binding ConfirmOrderCommand}" Margin="20"/>
            <Button Content="{DynamicResource CancelOrderButton}" Width="150" Height="30" Command="{Binding CancelOrderCommand}" Margin="20"/>
        </StackPanel>
    </Grid>
</Page>
