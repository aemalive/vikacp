<Page x:Class="cp.views.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:cp.views"
      xmlns:vms="clr-namespace:cp.viewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProfilePage">


    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Page.Resources>


    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="{Binding FullName}" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

            <TextBlock Text="{DynamicResource Profile_AdminSection}" 
                       Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVis}}"
                       FontWeight="SemiBold" Margin="0,0,0,5"/>

            <TextBlock Text="{DynamicResource Profile_CustomerSection}" 
                       Visibility="{Binding IsCustomer, Converter={StaticResource BoolToVis}}"
                       FontWeight="SemiBold" Margin="0,0,0,5"/>

            <Button Content="{DynamicResource Profile_LogoutButton}" 
                    Command="{Binding LogoutCommand}" 
                    Width="120"
                    HorizontalAlignment="Left"
                    Margin="0,10,0,0"/>
            <Button Content="{DynamicResource Profile_EditOwnProfileButton}"
                    Command="{Binding EditOwnProfileCommand}"
                    Width="160"
                    HorizontalAlignment="Left"
                    Margin="0,5,0,0"/>
        </StackPanel>

        <ListBox Grid.Row="1"
                 Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVis}}"
                 ItemsSource="{Binding Users}"
                 SelectedItem="{Binding SelectedUser}"
                 Margin="0,0,0,10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="{Binding Username}" FontWeight="Bold" FontSize="16"/>
                        <TextBlock Text="{Binding FullName}" Margin="0,5,0,0"/>
                        <TextBlock Text="{Binding Role}" Margin="0,5,0,0"/>

                        <Button Content="{DynamicResource Profile_EditUserButton}"
                                Command="{Binding DataContext.EditUserCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                CommandParameter="{Binding}"
                                Visibility="{Binding DataContext.IsAdmin, 
                                                    RelativeSource={RelativeSource AncestorType=ListBox}, 
                                                    Converter={StaticResource BoolToVis}}"
                                Width="100"
                                Margin="0,10,0,0"/>
                        <Button Content="{DynamicResource Profile_DeleteUserButton}"
                                Command="{Binding DataContext.DeleteUserCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                CommandParameter="{Binding}"
                                Width="80"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <ListBox Grid.Row="1"
                 Visibility="{Binding IsCustomer, Converter={StaticResource BoolToVis}}"
                 ItemsSource="{Binding OrderHistory}"
                 SelectedItem="{Binding SelectedOrder, Mode=TwoWay}"
                 Margin="0,0,0,10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Margin="0,5,0,0" FontWeight="Bold">
                                    <Run Text="{DynamicResource Order_Date}"/>
                                    <Run Text="{Binding OrderDate, Mode=OneWay, StringFormat=' {0:dd.MM.yyyy HH:mm}'}"/>
                        </TextBlock>
                        <TextBlock Margin="0,5,0,0">
                                    <Run Text="{DynamicResource PriceLabel}"/>
                                    <Run Text="{Binding TotalPrice, Mode=OneWay, StringFormat=' {0:C}'}"/>
                        </TextBlock>

                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>

</Page>
