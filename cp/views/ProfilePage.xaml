<Page x:Class="cp.views.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:cp.views"
      xmlns:vms="clr-namespace:cp.viewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProfilePage">


    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Page.Resources>


    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="{Binding FullName}" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

            <TextBlock Text="Админский раздел" 
                       Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVis}}"
                        FontWeight="SemiBold" Margin="0,0,0,5"/>

            <TextBlock Text="Пользовательский раздел" 
                       Visibility="{Binding IsCustomer, Converter={StaticResource BoolToVis}}"
                        FontWeight="SemiBold" Margin="0,0,0,5"/>

            <Button Content="Выйти" 
                    Command="{Binding LogoutCommand}" 
                    Width="120"
                    HorizontalAlignment="Left"
                    Margin="0,10,0,0"/>
        </StackPanel>

        <ListBox Grid.Row="1"
                 Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVis}}"
                 ItemsSource="{Binding Users}"
                 SelectedItem="{Binding SelectedUser}"
                 Margin="0,0,0,10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="5">
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="{Binding Username}" FontWeight="Bold" FontSize="16"/>
                            <TextBlock Text="{Binding FullName}" Margin="0,5,0,0"/>
                            <TextBlock Text="{Binding Role}" Margin="0,5,0,0"/>

                            <Button Content="Редактировать"
                                    Command="{Binding DataContext.EditUserCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                    CommandParameter="{Binding}"
                                    Visibility="{Binding DataContext.IsAdmin, 
                                                        RelativeSource={RelativeSource AncestorType=ListBox}, 
                                                        Converter={StaticResource BoolToVis}}"
                                    Width="100"
                                    Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <ListBox Grid.Row="1"
         Visibility="{Binding IsCustomer, Converter={StaticResource BoolToVis}}"
         ItemsSource="{Binding OrderHistory}"
         SelectedItem="{Binding SelectedOrder, Mode=TwoWay}"
         Margin="0,0,0,10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="5">
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="{Binding OrderDate, StringFormat='Дата заказа: {0:dd.MM.yyyy HH:mm}'}" FontWeight="Bold"/>
                            <TextBlock Text="{Binding TotalPrice, StringFormat='Сумма: {0:C}'}" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>

</Page>
